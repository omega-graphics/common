
project = Project("omega-common","0.1")

main_srcs = [
    "./src/common.cpp",
    "./src/fs.cpp"
]

if is_mac:
    main_srcs += glob("./src/*.mm")

main = Library(name="omega-common",source_files=main_srcs,shared=False,deps=[],output_dir="lib")
main.add_include_dirs(["./include"])

project.add_targets([main])
project.install_targets("omega_common_lib",[main],"lib")
